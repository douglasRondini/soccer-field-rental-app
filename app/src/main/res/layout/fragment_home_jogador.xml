<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_theme_dark"
    tools:context=".ui.fragments.home.HomeJogadorFragment">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center">
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_logo"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button"/>

            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Arena Home"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center|start"
                android:layout_marginStart="10dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="21dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications_24"/>
        </LinearLayout>

    </Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linlayBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_card_azul">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pronto para o jogo?"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reserve seu horário agora mesmo e garanta a diversão com sua equipe."
                        android:textSize="14sp"
                        android:textColor="@color/white"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_button_raio_16_fundo_branco"
                        android:text="Agendar Agora"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:textColor="@color/forty"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_calendar_today_24"
                        android:drawablePadding="5dp"
                        android:paddingHorizontal="99dp"
                        android:layout_marginTop="41dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campos Disponíveis"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="11dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_campo">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:src="@drawable/imgarena"
                        style="@style/RoundedTopImage"
                        android:scaleType="fitXY"/>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Campo A"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Society - 7 players"
                                android:textSize="14sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 150"
                                android:textColor="@color/primary"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="por hora"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAgendarCampoA"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/bg_buttom_transparente_raio_16"
                        android:text="Ver Detalhes"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_campo">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        android:src="@drawable/imgarena"
                        style="@style/RoundedTopImage"
                        android:scaleType="fitXY"/>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Campo B"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Society - 7 players"
                                android:textSize="14sp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="R$ 150"
                                android:textColor="@color/primary"
                                android:textSize="18sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="por hora"
                                android:textSize="14sp"/>

                        </LinearLayout>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAgendarCampoB"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:background="@drawable/bg_buttom_transparente_raio_16"
                        android:text="Ver Detalhes"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    

</androidx.constraintlayout.widget.ConstraintLayout>